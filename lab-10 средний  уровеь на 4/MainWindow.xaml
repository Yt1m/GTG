<Window x:Class="CharacterCounter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Character Counter" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBox x:Name="InputTextBox" Grid.Row="0" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Stretch" />
        <Button x:Name="CountButton" Grid.Row="1" Content="Подсчитать символы" Click="CountCharacters_Click" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Left" />
        <ListBox x:Name="ResultListBox" Grid.Row="2" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Stretch" />
    </Grid>
</Window>
